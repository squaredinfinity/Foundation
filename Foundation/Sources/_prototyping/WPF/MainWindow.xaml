                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn DisplayMemberBinding="{Binding Id}" />
                        

                    </GridView.Columns>
                </GridView>
            </local:MyListView.View>
            <local:MyListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <local:MyStackPanel />
                    <!--<StackPanel />-->
                </ItemsPanelTemplate>
            </local:MyListView.ItemsPanel>
        </local:MyListView>
    </Grid>
</Window>
