<Window x:Class="Windows.Behaviors.Examples.DotNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="http://schemas.squaredinfinity.com/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <TextBlock Text="Click Me"
                   behaviors:SingleOrDoubleClick.SingleClickCommand="{Binding ExecuteClick}"
                   behaviors:SingleOrDoubleClick.DoubleClickCommand="{Binding ExecuteDoubleClick}" />

    </Grid>
</Window>
